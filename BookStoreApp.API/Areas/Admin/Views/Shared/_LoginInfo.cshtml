@using BookStoreApp.Contracts.Models 
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        Hello &nbsp;
    </li>

    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link" asp-controller="home" asp-action="index">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="book" asp-action="getallbooks">Books</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="book" asp-action="addbook">Add Book</a>
        </li>

    </ul>
    <span class="navbar-text">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <span class="drophover">@User.Identity.Name</span>
                <div class="dropdown-content">
                    <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                    <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change password</a>
                </div>

                @*<div class="dropdown-menu" aria-labelledby="navbarDropdown">
                          <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                          <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change password</a>
                    </div>*@
            </li>
        </ul>
    </span>

}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="account" asp-action="login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="account" asp-action="signup">Sign Up</a>
    </li>
}

